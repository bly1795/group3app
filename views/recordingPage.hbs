  <div class="container" id="save">
    <button id="resetBtn" type="button" class="btn btn-danger btn-lg" data-name='9' data-target="#warning" data-toggle="modal">Delete</button>
    <button id="saveBtn" type="button" class="btn btn-success btn-lg" data-name='6' data-target="#exampleModal"
      data-toggle="modal">Save</button>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Save Recording</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input id="recordName" type="text" class="form-control" placeholder="Recording name" aria-label="recordName"
            aria-describedby="basic-addon1">
        </div>
        <div class="modal-footer">
          <button id="modClose" type="button" class="btn btn-danger modBtn" data-dismiss="modal">Delete</button>
          <button id="modSave" type="button" class="btn btn-success modBtn">Save</button>
        </div>
      </div>
    </div>
  </div>
  
  <div class="modal fade" id="warning" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-body">
      <button>Cancel</button>
      <button>Delete</button>
    </div>
  </div>

  {{/if}}

  <form style="display: hidden" action="/addRecording" method="get" id="form">
    <input type="hidden" id="title" name="title" value="" />
    <input type="hidden" id="recURL" name="recURL" value="" />
    <input type="hidden" id="date" name="date" value="" />
    <input type="hidden" id="length" name="length" value="" />
    <input type="hidden" id="instName" name="instName" value="{{instName}}" />
  </form>

