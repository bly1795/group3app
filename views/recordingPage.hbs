  <div class="container" id="contId">
    <button id="startBtn" type="button" class="btn btn-danger btn-lg" data-name='4'>Record</button>
  </div>

  <audio id="audioCont" controls style="margin-bottom: 5% ; margin-top: 5%"></audio>


  <div class="container" id="save">
    <button id="resetBtn" type="button" class="btn btn-danger btn-lg" data-name='9'>Delete</button>
    <button id="saveBtn" type="button" class="btn btn-success btn-lg" data-name='6' data-target="#exampleModal"
      data-toggle="modal">Save</button>
  </div>

  <div id="tutModal" class="modal" role="document" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">

      <div class="modal-content">
        <div class="modal-header">
          <h4 class=" text-center col-12 modal-title">
            Tutorial
            <button type="button" id="closePopup" style="margin-top: -7px" class="close" data-dismiss="modal"
              aria-hidden="true">&times;</button>
          </h4>
        </div>
        <div class="modal-body">
          <p>Shake to make noise.</p>
          <p>The faster you shake,</p>
          <p>the faster the sound.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Save Recording</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input id="recordName" type="text" class="form-control" placeholder="Recording name" aria-label="recordName"
            aria-describedby="basic-addon1">
        </div>
        <div class="modal-footer">
          <button id="modClose" type="button" class="btn btn-danger modBtn" data-dismiss="modal">Delete</button>
          <button id="modSave" type="button" class="btn btn-success modBtn">Save</button>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <div class="container containerPad">
    <img class="img" src="/images/{{instName}}.png">
  </div>

  {{!-- <div class="container" id="contId2">
